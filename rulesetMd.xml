<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="SideCI Custom PHPMD rule set example"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0  http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>The STAT coding standard by Boris Korobkov</description>

    <!-- Требует убрать неиспользуемые переменные. А они иногда нужны, чтобы при вызове метода понимать значение параметра. "Avoid unused local variables such as ..."  -->
    <rule ref="rulesets/unusedcode.xml/UnusedLocalVariable">
        <properties>
            <property name="allow-unused-foreach-variables" value="true" />
        </properties>
    </rule>

</ruleset>